{
  "agent": {
    "metrics_collection_interval": 60,
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
  },
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}"
    },
    "metrics_collected": {
      "mem": {
        "measurement": [
          "mem_used_percent"
        ],
        "metrics_collection_interval": 60
      },
      "disk": {
        "resources": [
          "/"
        ],
        "measurement": [
          "used_percent"
        ],
        "metrics_collection_interval": 60
      },
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_active"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": true
      },
      "statsd": {
        "service_address": ":8125",
        "metrics_collection_interval": 60,
        "metrics_aggregation_interval": 60,
        "metric_separator": ".",
        "metrics_collection_enabled": true,
        "preferred_aggregation_type": "average",
        "pipeline": [
          {
            "source": "statsd",
            "destination": "cloudwatch",
            "rules": [
              {
                "pattern": "webapp.api.*.*.count",
                "type": "count",
                "output_format": "webapp.api.$1.$2.count"
              },
              {
                "pattern": "webapp.api.*.*.duration",
                "type": "timing",
                "output_format": "webapp.api.$1.$2.duration"
              },
              {
                "pattern": "webapp.database.query.duration",
                "type": "timing",
                "output_format": "webapp.database.query.duration"
              }
            ]
          }
        ]
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/syslog",
            "log_group_name": "/var/log/syslog",
            "log_stream_name": "{instance_id}",
            "timestamp_format": "%b %d %H:%M:%S"
          }
        ]
      }
    }
  }
}